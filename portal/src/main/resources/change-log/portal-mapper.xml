<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.portal.demo.mapper.PortalMapper">
	<select id="getAllUsers" resultType="com.portal.demo.model.User">
	select * from User
	</select>
	
	<select id="getUser" resultType="com.portal.demo.model.User">
	select * from User where id = #{id}
	</select>

</mapper>